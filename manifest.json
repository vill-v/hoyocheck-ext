{
	"manifest_version": 2,
	"name": "Genshin Impact Check-In Helper",
	"version": "1.0",
	"description": "Daily check-in to Hoyolab.",
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"64": "icons/64.png",
		"128": "icons/128.png",
		"256": "icons/256.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/16.png",
			"32": "icons/32.png"
		},
		"default_title": "Genshin Check-In Helper",
		"default_popup": "popup/popup.html"
	},
	"permissions": [
		"https://hk4e-api-os.mihoyo.com/event/*",
		"http://localhost:3000/*",
		"alarms"
	]
}